# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGO_URL=mongodb://localhost:27017/africonnect

# JWT
JWT_SECRET=your-jwt-secret-key-here

# Admin Credentials
ADMIN_EMAIL_PASSWORD=your-app-specific-password

# Email Configuration
# Preferred variable names (used by utils/notifications.js)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password
FROM_EMAIL=your-email@gmail.com

# Legacy names (still supported for backward-compatibility)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-16-char-app-password

# Alternative Email Services:
# SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587
# Outlook: SMTP_HOST=smtp-mail.outlook.com, SMTP_PORT=587
# Zoho: SMTP_HOST=smtp.zoho.com, SMTP_PORT=587

# Local dev SMTP (no-auth) examples:
# Mailpit/MailHog: SMTP_HOST=localhost, SMTP_PORT=1025 (leave SMTP_USER/SMTP_PASS empty)

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-webhook-id

# 2Checkout Configuration
# Get credentials from: https://secure.2checkout.com/cpanel/ > Integrations > API
TWOCHECKOUT_SELLER_ID=your-seller-id-here
TWOCHECKOUT_SECRET_WORD=your-secret-word-here
TWOCHECKOUT_INS_SECRET=your-ins-secret-here
TWOCHECKOUT_SANDBOX=true
TWOCHECKOUT_RETURN_URL=http://localhost:3001/payment/2co/return
TWOCHECKOUT_WEBHOOK_URL=http://localhost:4000/checkout/2co/webhook

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Upload Provider
# - cloudinary: signed browser uploads + Cloudinary URLs (default)
# - gcs: Google Cloud Storage signed uploads + GCS URLs
# - local: local disk (/uploads)
UPLOAD_PROVIDER=cloudinary

# Google Cloud Storage (when UPLOAD_PROVIDER=gcs or USE_GCS=true)
# Requires a service account with Storage Object Admin (or narrower) on the bucket.
# Authentication uses Application Default Credentials. Common setup:
#   GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET=your-gcs-bucket-name
GCS_PROJECT_ID=your-gcp-project-id
GCS_UPLOAD_PREFIX=afrionet

# If true, server will attempt to make uploaded objects public.
# If your bucket uses uniform bucket-level access, set public IAM at bucket-level.
GCS_MAKE_PUBLIC=true

# Optional: if you front GCS with a custom domain/CDN, set this to override the public base URL.
# Example: https://cdn.afrionet.com
GCS_PUBLIC_BASE_URL=

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
# Maximum file size for general uploads (listings, etc.) in MB
UPLOAD_MAX_FILE_SIZE_MB=250

# Maximum chunk size for chunked uploads in bytes (8MB default)
# Used for large video uploads through proxies/CDNs to prevent buffering issues
UPLOAD_CHUNK_MAX_BYTES=8388608

# Note: Video upload limit is 500MB (configured in uploadVideo.js)
# Image upload limit is 5MB (configured in uploadImage.js)
# Talent video upload limit is 100MB (configured in uploadTalentVideo.js)
