# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGO_URL=mongodb://localhost:27017/africonnect

# JWT
JWT_SECRET=your-jwt-secret-key-here

# Admin Credentials
ADMIN_EMAIL_PASSWORD=your-app-specific-password

# Email Configuration (Gmail Example)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password

# Alternative Email Services:
# SendGrid: EMAIL_HOST=smtp.sendgrid.net, EMAIL_PORT=587
# Outlook: EMAIL_HOST=smtp-mail.outlook.com, EMAIL_PORT=587
# Zoho: EMAIL_HOST=smtp.zoho.com, EMAIL_PORT=587

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-webhook-id

# 2Checkout Configuration (after approval)
TWOCHECKOUT_MERCHANT_CODE=your-merchant-code
TWOCHECKOUT_SECRET_KEY=your-secret-key
TWOCHECKOUT_SECRET_WORD=your-secret-word
TWOCHECKOUT_MODE=sandbox

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
