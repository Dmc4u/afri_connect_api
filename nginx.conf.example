# Nginx Configuration for AfriConnect API (Production)
#
# This configuration addresses common video upload issues:
# - Increases client_max_body_size to 500MB for large video files
# - Disables proxy buffering to prevent stalls at low percentages
# - Sets appropriate timeouts for long uploads
# - Handles CORS properly for the API
#
# Usage:
# 1. Copy this file to /etc/nginx/sites-available/africonnect-api
# 2. Adjust server_name and SSL paths
# 3. Enable: sudo ln -s /etc/nginx/sites-available/africonnect-api /etc/nginx/sites-enabled/
# 4. Test: sudo nginx -t
# 5. Reload: sudo systemctl reload nginx

# Upstream Node.js application
upstream africonnect_api {
    server 127.0.0.1:4000;
    keepalive 64;
}

server {
    listen 80;
    listen [::]:80;
    server_name api.afrionet.com;  # Change to your domain

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name api.afrionet.com;  # Change to your domain

    # SSL Configuration (adjust paths for your certificates)
    ssl_certificate /etc/letsencrypt/live/api.afrionet.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.afrionet.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Enable SharedArrayBuffer for client-side video compression (FFmpeg WASM)
    # Required for videoCompression.js to work in production
    add_header Cross-Origin-Opener-Policy "same-origin" always;
    add_header Cross-Origin-Embedder-Policy "require-corp" always;

    # CRITICAL: Upload size limits (fixes stuck at 2% issue)
    # Set to 500MB to match backend uploadVideo.js limit
    client_max_body_size 500M;

    # CRITICAL: Timeout settings for large file uploads
    # Videos can take 5-10 minutes to upload on slower connections
    client_body_timeout 600s;      # 10 minutes for client to send body
    send_timeout 600s;              # 10 minutes for sending response
    proxy_connect_timeout 600s;     # 10 minutes to connect to backend
    proxy_send_timeout 600s;        # 10 minutes to send to backend
    proxy_read_timeout 600s;        # 10 minutes to read from backend

    # CRITICAL: Disable buffering for uploads (prevents stalling)
    # Buffering can cause uploads to appear stuck as Nginx waits for entire file
    proxy_request_buffering off;
    proxy_buffering off;

    # Increase buffer sizes for better performance
    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;

    # Root directory for serving uploaded files
    root /var/www/africonnect-api;

    # Serve static uploaded files directly (faster than Node.js)
    location /uploads/ {
        alias /var/www/africonnect-api/uploads/;  # Adjust to your upload path
        expires 30d;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin "*";

        # Enable CORS for uploaded media (required for cross-origin resource sharing)
        add_header Cross-Origin-Resource-Policy "cross-origin" always;

            video/ogg ogv;
            video/quicktime mov;
            image/jpeg jpg jpeg;
            image/png png;
            image/gif gif;
            image/webp webp;
        }
    }

    # API routes - proxy to Node.js
    location / {
        # Handle preflight CORS requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, PATCH, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }

        proxy_pass http://africonnect_api;

        # Preserve original request information
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # Don't cache API responses
        proxy_cache_bypass $http_upgrade;

        # Add CORS headers (backend also sets these, but belt & suspenders)
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, PATCH, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
    }

    # WebSocket support for Socket.IO
    location /socket.io/ {
        proxy_pass http://africonnect_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket timeouts
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Health check endpoint (optional)
    location /health {
        access_log off;
        proxy_pass http://africonnect_api;
        proxy_set_header Host $host;
    }

    # Logging
    access_log /var/log/nginx/africonnect-api-access.log;
    error_log /var/log/nginx/africonnect-api-error.log warn;
}

# Optional: If you need to increase the maximum upload size globally
# Add this to /etc/nginx/nginx.conf in the http {} block:
# client_max_body_size 500M;
